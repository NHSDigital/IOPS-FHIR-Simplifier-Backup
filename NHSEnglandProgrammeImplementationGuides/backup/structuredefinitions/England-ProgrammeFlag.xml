<StructureDefinition xmlns="http://hl7.org/fhir">
    <id value="England-ProgrammeFlag" />
    <url value="https://fhir.nhs.uk/England/StructureDefinition/England-ProgrammeFlag" />
    <version value="0.1.0" />
    <name value="EnglandProgrammeFlag" />
    <title value="England Programme Flag" />
    <status value="draft" />
    <date value="2024-02-14" />
    <publisher value="NHS England" />
    <contact>
    <name value="NHS England" />
     <telecom>
      <system value="email" />
      <value value="interoperabilityteam@nhs.net" />
      <use value="work" />
      <rank value="1" />
     </telecom>
    </contact>
    <description value="Record an individual flag for an NHS England programme." />
    <purpose value="This profile is made available to record an individual flag for an NHS England programme. " />
